<%- include ../partials/header %>

    <div class="container">
      <div class="row">
        <div class="m-auto col-md-8"><br>
          <center><h2 class="mb-4 mt-4">Be Our New Member!!!</h2></center><br>
              <form action="/user/signup" method="POST">
                <div class="form-group">
                  Name:
                  <input type="name" name="name" id="name" class="form-control" required />
                </div>
                <div class="form-group">
                  Email:
                  <input type="email" name="email" id="email" class="form-control" required />
                </div>
                <div class="form-group">
                  Password:
                  <input type="password" name="password" id="password"class="form-control" required />
                </div>
                <div class="form-group">
                  Verify Password:
                  <input type="password" name="password2" id="password2" class="form-control" required  />
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button type="submit" style="width: 100%;" class="btn btn-warning">
                  SignUp
                </button>
              </form>
        </div>
      </div>
    </div>

    <%- include ../partials/footer %>